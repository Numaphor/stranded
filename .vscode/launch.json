{
  "version": "0.3.0",
  "configurations": [
    {
      "name": "butano",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "make",
      "postDebugTask": "stop",
      "program": "${workspaceFolder}/numa.elf",
      "args": [],
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/devkitPro/devkitARM/bin/arm-none-eabi-gdb.exe",
      "miDebuggerServerAddress": "localhost:2345",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set GDB to break on runtime errors",
          "text": "handle SIGSEGV stop print",
          "ignoreFailures": true
        },
        {
          "description": "mgba",
          "text": "shell start /b \"\" \"C:/Program Files/mGBA/mGBA.exe\" -g ${workspaceFolder}/numa.gba",
          "ignoreFailures": true                
        }
      ],
      "logging": {
        "engineLogging": true,
        "trace": true,
        "traceResponse": true
      }
    }
  ]
}